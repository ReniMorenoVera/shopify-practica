{%- if section.settings.show_popup -%}
  {{ 'pop-up-home.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'pop-up-home.js' | asset_url }}" defer></script>

  <div id="PopupModal" class="popup-modal">
    <div class="popup-modal__content">
      <button type="button" class="popup-modal__close">
        {% render 'icono-close' %}
      </button>

      <div class="popup-modal__body">
        <div class="popup-modal__logo">
          {% render 'logo-fab-pub' %}
        </div>
        <h2>{{ section.settings.title }}</h2>
        <p>{{ section.settings.text }}</p>

        {%- form 'customer', class: 'popup-modal__form' -%}
          <input type="hidden" name="contact" value="newsletter">
          <div class="popup-modal__field">
            <input
              type="email"
              name="contact[email]"
              id="PopupEmail"
              class="popup-modal__input"
              value="{{ form.email }}"
              placeholder="{{ section.settings.email_placeholder }}"
            >
            <button type="submit" class="popup-modal__submit">
              {{ section.settings.button_label }}
            </button>
          </div>
        {%- endform -%}

        <button type="button" class="popup-modal__no-thanks">
          {{ section.settings.no_thanks_button }}
        </button>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Newsletter Popup",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_popup",
      "label": "Show popup",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Join our community"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Enter your email and get the latest updates on our site"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email placeholder",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "SUBSCRIBE"
    },
    {
      "type": "text",
      "id": "no_thanks_button",
      "label": "No thanks button",
      "default": "No, thanks"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Popup"
    }
  ]
}
{% endschema %}

{% schema %}
{
  "name": "Custom Social Bar",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo fab.pub"
    },
    {
      "type": "text",
      "id": "side_text",
      "label": "Texto vertical",
      "default": "EMPOWERING CIRCULAR WAY TO LIFE"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "linkedin_url",
      "label": "LinkedIn URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    }
  ],
  "presets": [
    {
      "name": "Custom Social Bar"
    }
  ]
}
{% endschema %}

<section class="custom-social-bar">
  <div class="left-bar">
    {% if section.settings.logo_image %}
      <img src="{{ section.settings.logo_image | img_url: 'medium' }}" alt="Logo fab.pub" class="fabpub-logo" />
    {% endif %}
    <span class="side-text">{{ section.settings.side_text }}</span>
  </div>
  <div class="right-icons">
    {% if section.settings.instagram_url %}
      <a href="{{ section.settings.instagram_url }}" target="_blank">Instagram</a>
    {% endif %}
    {% if section.settings.facebook_url %}
      <a href="{{ section.settings.facebook_url }}" target="_blank">Facebook</a>
    {% endif %}
    {% if section.settings.linkedin_url %}
      <a href="{{ section.settings.linkedin_url }}" target="_blank">LinkedIn</a>
    {% endif %}
    {% if section.settings.youtube_url %}
      <a href="{{ section.settings.youtube_url }}" target="_blank">YouTube</a>
    {% endif %}
  </div>
</section>

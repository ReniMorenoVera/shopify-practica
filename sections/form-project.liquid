{{ 'section-form-project.css' | asset_url | stylesheet_tag }}

<div class="form-project">
  <div class="form-project__container">
    <h2 class="form-project__top-title">{{ section.settings.top_title }}</h2>
    <h1 class="form-project__title">{{ section.settings.title }}</h1>
    <p class="form-project__description">{{ section.settings.description }}</p>

    <form class="form-project__form" action="/contact" method="post">
      {%- if form.posted_successfully? -%}
        <div class="form-status form-status-list form__message" tabindex="-1" autofocus>
          {% render 'icon-success' %}
          {{ 'templates.contact.form.post_success' | t }}
        </div>
      {%- endif -%}

      <div class="form-project__fields">
        <div class="form-project__field-row">
          <div class="form-project__field">
            <input type="text" id="name" name="name" required placeholder="{{ section.settings.name_placeholder }}">
            <label for="name">{{ section.settings.name_label }}</label>
          </div>
          <div class="form-project__field">
            <input
              type="text"
              id="company"
              name="company"
              placeholder="{{ section.settings.company_placeholder }}"
              {% if section.settings.company_required %}
                required
              {% endif %}
            >
            <label for="company">{{ section.settings.company_label }}</label>
          </div>
        </div>

        <div class="form-project__field-row">
          <div class="form-project__field">
            <input type="email" id="email" name="email" required placeholder="{{ section.settings.email_placeholder }}">
            <label for="email">{{ section.settings.email_label }}</label>
          </div>
          <div class="form-project__field">
            <input
              type="tel"
              id="phone"
              name="phone"
              placeholder="{{ section.settings.phone_placeholder }}"
              {% if section.settings.phone_required %}
                required
              {% endif %}
            >
            <label for="phone">{{ section.settings.phone_label }}</label>
          </div>
        </div>

        <div class="form-project__field-row">
          <div class="form-project__field">
            <select
              id="service"
              name="service"
              {% if section.settings.service_required %}
                required
              {% endif %}
            >
              <option value="" disabled selected>{{ section.settings.service_placeholder }}</option>
              <option value="option1">{{ section.settings.service_option1 }}</option>
              <option value="option2">{{ section.settings.service_option2 }}</option>
              <option value="option3">{{ section.settings.service_option3 }}</option>
              <option value="option4">{{ section.settings.service_option4 }}</option>
            </select>
            <label for="service">{{ section.settings.service_label }}</label>
          </div>
          <div class="form-project__field">
            <input
              type="text"
              id="budget"
              name="budget"
              placeholder="{{ section.settings.budget_placeholder }}"
              {% if section.settings.budget_required %}
                required
              {% endif %}
            >
            <label for="budget">{{ section.settings.budget_label }}</label>
          </div>
        </div>

        <div class="form-project__field form-project__field--full">
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            placeholder="{{ section.settings.message_placeholder }}"
          ></textarea>
          <label for="message">{{ section.settings.message_label }}</label>
        </div>
      </div>

      <div class="form-project__button">
        <button type="submit">{{ section.settings.submit_text }}</button>
      </div>
    </form>
  </div>
</div>


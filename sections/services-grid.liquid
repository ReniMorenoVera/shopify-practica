{{ 'section-services-grid.css' | asset_url | stylesheet_tag }}

<div class="services-grid page-width">
  <div class="services-grid__container">
    {%- for block in section.blocks -%}
      <div
        class="services-grid__item"
        {{ block.shopify_attributes }}
        style="background-color: {{ block.settings.background_color }}"
      >
        <div class="services-grid__item-content">
          {%- if block.settings.title != blank -%}
            <h2 class="services-grid__item-title">{{ block.settings.title | escape }}</h2>
          {%- endif -%}

          {%- if block.settings.description != blank -%}
            <div class="services-grid__item-description">
              {{ block.settings.description }}
            </div>
          {%- endif -%}

          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="services-grid__item-link">
              Learn more
              {% render 'icon-arrow' %}
            </a>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Services Grid",
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Service name"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#D2D2C7"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services Grid",
      "blocks": [
        {
          "type": "service"
        },
        {
          "type": "service"
        },
        {
          "type": "service"
        }
      ]
    }
  ]
}
{% endschema %}

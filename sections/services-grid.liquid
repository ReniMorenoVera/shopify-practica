{{ 'section-services-grid.css' | asset_url | stylesheet_tag }}

<div class="services-grid page-width">
  <div class="services-grid__container">
    {%- for block in section.blocks -%}
      <div
        class="services-grid__item"
        {{ block.shopify_attributes }}
      >
        <div class="services-grid__item-content">
          {%- if block.settings.title != blank -%}
            <h2 class="services-grid__item-title">{{ block.settings.title | escape }}</h2>
            {% if block.settings.title == '3D Printing' %}
              {% render 'icon-arrow-multicolumn' %}
              <div class="hover-content">
                <h2>3D Printing</h2>
                <p>Discover our wide range of 3D printing options in our state-of-the-art London facilities.</p>
                <a href="#" class="button">GET STARTED</a>
              </div>
            {%- elsif block.settings.title contains 'Expert Consultation' -%}
              {% render 'icon-arrow-multicolumn' %}
              <div class="hover-content">
                <h2>Expert Consultation</h2>
                <p>Our in-house experts will assist you with complex technical ideas making your concepts a reality.</p>
                <a href="#" class="button">TALK TO AN EXPERT</a>
              </div>
            {%- elsif block.settings.title contains 'Laser Cutting' -%}
              {% render 'icon-arrow-multicolumn' %}
              <div class="hover-content">
                <h2>Laser Cutting</h2>
                <p>Bring your ideas to life with laser cutting and engraving across a range of materials.</p>
                <a href="#" class="button">EXPLORE MORE</a>
              </div>
            {% else %}
              {% render 'icon-arrow-multicolumn' %}
              <div class="hover-content">
                <h2>Bespoke Fabrication</h2>
                <p>Our bespoke fabrication services provide the expert attention your special projects require.</p>
                <a href="#" class="button">START YOUR PROJECT</a>
              </div>
            {% endif %}
          {%- endif -%}

          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="services-grid__item-link">
              Learn more
              {% render 'icon-arrow' %}
            </a>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Services Grid",
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Service name"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#D2D2C7"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services Grid",
      "blocks": [
        {
          "type": "service"
        },
        {
          "type": "service"
        },
        {
          "type": "service"
        }
      ]
    }
  ]
}
{% endschema %}

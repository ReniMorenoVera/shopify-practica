      "label": "Email Address",
      "default": "info@fab.pub"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL",
      "info": "Full URL to your Instagram profile"
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook URL",
      "info": "Full URL to your Facebook page"
    },
    {

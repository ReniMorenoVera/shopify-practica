{% comment %}theme-check-disable UndefinedObject{% endcomment %}

<footer class="footer">
  <div class="footer__container">
    <div class="footer__content page-width">
      <!-- Newsletter Section -->
      <div class="footer__newsletter">
        <h2>
          {{ section.settings.newsletter_heading }}
        </h2>
        <div class="newsletter-form">
          <input type="email" placeholder="Your email" class="newsletter-input">
          <button class="newsletter-button">GET THE LATEST</button>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="footer__links-wrapper">
        <!-- Middle Column with Legal and Architecture -->
        <div class="footer__middle-column">
          <div class="legal-column">
            <h3>Legal</h3>
            <ul class="footer__list">
              <li><a href="{{ routes.root_url }}terms-conditions">Terms & conditions</a></li>
              <li><a href="{{ routes.root_url }}privacy-policy">Privacy policy</a></li>
            </ul>
          </div>

          <div class="architecture-column">
            <h3>
              Architecture<br>
              & Design Partner
            </h3>
            <ul class="footer__list">
              <li><a href="#">Mamou-Mani</a></li>
            </ul>
          </div>
        </div>

        <!-- Contact Column -->
        <div class="footer__contact-column">
          <h3>Contact Us</h3>
          <ul class="footer__list">
            <li>{{ section.settings.phone }}</li>
            <li>{{ section.settings.email }}</li>
          </ul>
          <div class="footer__social">
            <a
              href="{{ section.settings.social_instagram_link }}"
              target="_blank"
              rel="noopener"
              class="social-icon-instagram"
            >
              {% render 'icon-instagram' %}
            </a>
            <a
              href="{{ section.settings.social_facebook_link }}"
              target="_blank"
              rel="noopener"
              class="social-icon-facebook"
            >
              {% render 'icon-facebook' %}
            </a>
            <a
              href="{{ section.settings.social_linkedin_link }}"
              target="_blank"
              rel="noopener"
              class="social-icon-linkedin"
            >
              {% render 'icono-linkedin' %}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>


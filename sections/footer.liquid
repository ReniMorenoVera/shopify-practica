{% comment %}theme-check-disable UndefinedObject{% endcomment %}

<footer class="footer">
  <div class="footer__container">
    <div class="footer__content page-width">
      <!-- Newsletter Section -->
      <div class="footer__newsletter">
        <h2>
          Stay inspired and fuel your creativity with the Fab.Pub newsletter! Sign up now and get the latest updates.
        </h2>
        <div class="newsletter-form">
          <input type="email" placeholder="YOUR EMAIL" class="newsletter-input">
          <button class="newsletter-button">GET THE LATEST</button>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="footer__links-wrapper">
        <!-- Middle Column with Legal and Architecture -->
        <div class="footer__middle-column">
          <div class="legal-column">
            <h3>Legal</h3>
            <ul class="footer__list">
              <li><a href="{{ routes.root_url }}terms-conditions">Terms & conditions</a></li>
              <li><a href="{{ routes.root_url }}privacy-policy">Privacy policy</a></li>
            </ul>
          </div>

          <div class="architecture-column">
            <h3>
              Architecture<br>
              & Design Partner
            </h3>
            <ul class="footer__list">
              <li><a href="#">Mamou-Mani</a></li>
            </ul>
          </div>
        </div>

        <!-- Contact Column -->
        <div class="footer__contact-column">
          <h3>Contact Us</h3>
          <ul class="footer__list">
            <li>+44 (0)203 559 6798</li>
            <li>info@fab.pub</li>
          </ul>
          <div class="footer__social">
            {% render 'icon-instagram' %}
            {%- if settings.social_instagram_link != blank -%}
              <a
                href="{{ settings.social_instagram_link }}"
                target="_blank"
                rel="noopener"
                class="social-icon-instagram"
              >
              </a>
            {%- endif -%}

            {% render 'icon-facebook' %}
            {%- if settings.social_facebook_link != blank -%}
              <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" class="social-icon-facebook">
              </a>
            {%- endif -%}

            {% render 'icono-linkedin' %}
            {%- if settings.social_linkedin_link != blank -%}
              <a href="{{ settings.social_linkedin_link }}" target="_blank" rel="noopener" class="social-icon-linkedin">
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #ffffff;
    border-width: 1px, 0px, 1px, 0px;
    border-style: solid;
    border-color: #d0d0d0;
    border-top: none;
    height: 356px;
    width: calc(100% - 80px);
  }

  .footer__content {
    max-width: 1240px;
    height: 368px;
    min-width: 768px;
    position: relative;
  }

  .footer__newsletter h2 {
    font-family: Source Serif 4, serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.2;
    vertical-align: middle;
    max-width: 520px;
    margin-bottom: 38px;
    margin-top: 60px;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .newsletter-input {
    font-family: Inter, sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.2;
    width: 520px;
    padding: 12px 0;
    border: none;
    border-bottom: 1px solid #000;
    outline: none;
    appearance: none;
  }

  .newsletter-input::placeholder {
    color: #000;
  }

  .newsletter-input:focus {
    outline: none;
    box-shadow: none;
  }

  .newsletter-button {
    width: fit-content;
    padding: 20px 49px 20px 49px;
    border: 1px solid #000;
    border-radius: 100px;
    background: transparent;
    cursor: pointer;
    font-size: 16px;
    font-family: Inter, sans-serif;
    font-weight: 400;
    line-height: 1.2;
  }

  .newsletter-button:hover {
    background: #000;
    color: #fff;
  }

  .footer__middle-column {
    display: flex;
    flex-direction: column;
    margin-top: 0px;
    position: absolute;
    top: 0;
    left: 720px;
  }

  .footer__middle-column,
  .footer__contact-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .architecture-column h3,
  .legal-column h3,
  .footer__contact-column h3 {
    margin-bottom: 12px;
    color: #808080;
    font-family: Source Serif 4;
    font-weight: 500;
    font-size: 18px;
    line-height: 1.2;
    vertical-align: middle;
  }

  .architecture-column {
    display: flex;
    flex-direction: column;
    margin-top: 24px;
  }

  .footer__contact-column {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    left: 1000px;
  }

  .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__list li {
    margin-bottom: 8px;
  }

  .footer__list li,
  .footer__list a {
    color: #121212;
    text-decoration: none;
    font-family: Inter, sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.2;
    letter-spacing: 2.5%;
    vertical-align: middle;
  }

  .footer__social {
    display: flex;
    gap: 28px;
    margin-top: 24px;
    align-items: center;
  }

  .social-icon-instagram {
    color: #000;
  }

  .social-icon-facebook {
    color: #000;
  }

  .social-icon-linkedin {
    color: #000;
  }

  @media screen and (max-width: 749px) {
    .footer__links-wrapper {
      gap: 30px;
      flex-direction: column;
    }

    .footer__middle-column {
      margin: 30px 0;
    }

    .footer__newsletter {
      max-width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.footer.name",
  "blocks": [
    {
      "type": "link_list",
      "name": "t:sections.footer.blocks.link_list.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "t:sections.footer.blocks.link_list.settings.heading.label"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "t:sections.footer.blocks.link_list.settings.menu.label"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "newsletter_heading",
      "default": "Stay inspired and fuel your creativity with the Fab.Pub newsletter!",
      "label": "Newsletter Heading"
    },
    {
      "type": "text",
      "id": "phone",
      "default": "+44 (0)203 559 6798",
      "label": "Phone Number"
    },
    {
      "type": "text",
      "id": "email",
      "default": "info@fab.pub",
      "label": "Email Address"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_linkedin_link",
      "label": "LinkedIn URL"
    }
  ]
}
{% endschema %}
